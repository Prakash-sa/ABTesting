<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ImageViewActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lineraLayout1_id"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:transitionName="imageView1"
                app:srcCompat="@android:drawable/alert_dark_frame"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/image_button1_id"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="image1"
                android:id="@+id/textview1_id"/>
        </LinearLayout>




        <LinearLayout
            android:id="@+id/lineraLayout2_id"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:transitionName="imageView2"
            app:srcCompat="@android:drawable/alert_dark_frame"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/image_button2_id"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="image1"
            android:id="@+id/textview2_id"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>